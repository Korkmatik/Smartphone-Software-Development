<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtEnterInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtEnterInstruction" />

    <AutoCompleteTextView
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="@string/etNumberHint"
        android:inputType="textAutoComplete"
        android:textStyle="bold|italic"
        android:background="@color/design_default_color_primary"
        android:contentDescription="@string/descriptionPrimeNumberInput"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnPrimeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPrimeCheck" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="TextView" />

</LinearLayout>